@page
@model FrontEnd.Pages.Students.IndexModel
@{
}

<div class="container">
    <div class="d-flex flex-wrap justify-content-between my-4">
        <h2>Student Management</h2>
        <a href="/StudentManagement/Create" class="btn btn-primary">Create Student</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Student Id</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Addition Information</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Student != null)
            {
                @foreach(var s in Model.Student){
                    <tr>
                        <td>@s.StudentId</td>
                        <td>@s.Name</td>
                        <td>@s.Age</td>
                        <td>@s.Address</td>
                        <td>@s.PhoneNumber</td>
                        <td>@s.AdditionalInformation</td>
                        <td class="d-flex flex-wrap">
                            <a href="/StudentManagement/Detail?studentId=@s.StudentId&isUpdate=true" class="btn btn-warning mx-1">Edit</a>
                            <a href="/StudentManagement/Detail?studentId=@s.StudentId&isUpdate=false" class="btn btn-primary mx-1">Details</a>
                            @* <button class="btn btn-danger mx-1">Delete</button> *@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>