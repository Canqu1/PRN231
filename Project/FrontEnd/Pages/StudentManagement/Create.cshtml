@page
@model FrontEnd.Pages.Students.CreateModel
@{
}

<form method="post">
    <div class="container">
        <h1>Add new student</h1>
        <div class="text-danger">@Model.Message</div>
        <div class="row">
            <div class="form-group col-md-6 mb-2">
                <label for="name">Student Name</label>
                <input type="text" asp-for="Student.Name" class="form-control" id="name" />
            </div>
            <div class="form-group col-md-6 mb-2">
                <label for="email">Email</label>
                <input type="email" asp-for="Student.Email" class="form-control" id="email" />
            </div>
            <div class="form-group col-md-6 mb-2">
                <label for="pass">Password</label>
                <input type="password" asp-for="Student.Password" class="form-control" id="pass" />
            </div>
            <input type="hidden" asp-for="Student.Type" value="student" />
            <div class="form-group col-md-6 mb-2">
                <label for="age">Age</label>
                <input type="text" class="form-control" id="age" asp-for="Student.Age" />
            </div>
            <div class="form-group col-md-6 mb-2">
                <label for="regular">Regular Student</label>
                <select id="regular" class="form-select" asp-for="Student.IsRegularStudent">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <div class="form-group col-md-6 mb-2">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control" id="phone" asp-for="Student.PhoneNumber" />
            </div>
            <div class="form-group col-md-6 mb-2">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" asp-for="Student.Address" />
            </div>
            <div class="form-group col-md-6 mb-2">
                <label for="infor">Addition information</label>
                <input type="text" class="form-control" id="infor" asp-for="Student.AdditionalInformation" />
            </div>
        </div>
        <div class="d-flex flex-wrap justify-content-center mt-4">
            <a href="./Index" class="btn btn-secondary mx-2 col-md-2">Back</a>
            <button type="submit" class="btn btn-primary mx-2 col-md-2">Submit</button>
        </div>
    </div>
</form>