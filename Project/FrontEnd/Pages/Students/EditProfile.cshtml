@page "{studentId:int}"
@model FrontEnd.Pages.Students.EditProfileModel

@{
    var student = Model.Student;
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    <div class="card shadow-sm border-light">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Edit Student Profile</h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <strong><label asp-for="Student.Name"></label><strong>
                    <input asp-for="Student.Name" class="form-control" />
                    <span asp-validation-for="Student.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong>
                        <label asp-for="Student.Userid"></label><strong>
                            <input asp-for="Student.Userid" class="form-control" />
                            <span asp-validation-for="Student.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <strong><label asp-for="Student.Age"></label></strong>
                    <input asp-for="Student.Age" class="form-control" />
                    <span asp-validation-for="Student.Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Address"><strong>Address</strong></label>
                    <input type="text" id="Address" name="Student.Details.Address" class="form-control" value="@Model.Student.Details?.Address" />
                </div>
                <div class="form-group">
                    <label for="PhoneNumber"><strong>Phone Number</strong></label>
                    <input type="text" id="PhoneNumber" name="Student.Details.PhoneNumber" class="form-control" value="@Model.Student.Details?.PhoneNumber" />
                </div>
                <div class="form-group">
                    <label for="AdditionalInformation"><strong>Additional Information</strong></label>
                    <textarea id="AdditionalInformation" name="Student.Details.AdditionalInformation" class="form-control">@Model.Student.Details?.AdditionalInformation</textarea>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-muted text-center">
            <a href="/Students/StudentInfor/@Model.Student.StudentId" class="btn btn-secondary">Back to Profile</a>
        </div>
    </div>
</div>
