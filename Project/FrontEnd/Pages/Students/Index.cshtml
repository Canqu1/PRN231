@page "{studentId:int}"
@model FrontEnd.Pages.Students.IndexModel

@{
    var studentSubjects = Model.StudentSubjects;
}

<div class="container mt-4">
    <h1 class="mb-4">Evaluations Information</h1>

    @if (studentSubjects != null)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="card-title">Student Name: @studentSubjects.StudentName</h2>
            </div>
            <div class="card-body">
                @if (studentSubjects.Subjects.Any())
                {
                    @foreach (var subject in studentSubjects.Subjects)
                    {
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@subject.SubjectName</h5>
                                <p><strong>Grade:</strong> @subject.Grade</p>
                                <p><strong>Teacher:</strong> @subject.TeacherName</p>
                                <p><strong>Explanation:</strong> @subject.AdditionExplanation</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No subjects found.</p>
                }
            </div>
        </div>
    }
    else
    {
        <p class="text-muted">No subjects found.</p>
    }
    <div class="mb-3">
        <a class="btn btn-primary" href="/Students/StudentInfor/@studentSubjects.StudentID">View Student Information</a>
    </div>
</div>
