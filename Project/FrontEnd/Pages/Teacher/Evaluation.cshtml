@page
@model FrontEnd.Pages.Teacher.EvaluationModel
@{
}
<h2>Evaluation List</h2>

@if (Model.Evaluations != null && Model.Evaluations.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Grade</th>
                <th>Explanation</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evaluation in Model.Evaluations)
            {
                <tr>
                    <td>@evaluation.StudentName</td>
                    <td>@evaluation.Grade</td>
                    <td>@evaluation.AdditionExplanation</td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#updateModal-@evaluation.EvaluationId">Update</button>

                        <!-- Modal -->
                        <div class="modal fade" id="updateModal-@evaluation.EvaluationId" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="updateModalLabel">Update Evaluation</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form method="post" asp-page-handler="Update" asp-route-teacherId="@Model.TeacherId" asp-route-evaluationId="@evaluation.EvaluationId">
                                            <div class="form-group">
                                                <label for="grade">Grade</label>
                                                <input type="text" class="form-control" name="grade" value="@evaluation.Grade" />
                                            </div>
                                            <div class="form-group">
                                                <label for="additionExplanation">Explanation</label>
                                                <textarea class="form-control" name="additionExplanation">@evaluation.AdditionExplanation</textarea>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No evaluations found for this teacher.</p>
}