@page
@model FrontEnd.Pages.Teachers.DetailModel
@{
}

<form method="post">
    <div class="container">
        <h2>Detail information for @Model.Teacher.TeacherName</h2>

        <div class="text-danger">@Model.Message</div>
        <div class="row">
            <input type="hidden" class="form-control" asp-for="@Model.Teacher.TeacherId" value="@Model.Teacher.TeacherId" />
            <input type="hidden" class="form-control" asp-for="@Model.Teacher.AccountId" value="@Model.Teacher.AccountId" />
            <div class="form-group col-md-6">
                <label>Fullname</label>
                <input type="text" class="form-control" asp-for="@Model.Teacher.TeacherName" readonly="@(Model.IsEdit != true)" />
            </div>
            <div class="form-group col-md-6">
                <label>Email</label>
                <input type="email" class="form-control" asp-for="@Model.Teacher.Email" readonly="@(Model.IsEdit != true)" />
            </div>
            <div class="form-group col-md-6">
                <label>Department</label>
                <input type="text" class="form-control" asp-for="@Model.Teacher.Department" readonly="@(Model.IsEdit != true)" />
            </div>
            <div class="form-group col-md-6">
                <label>Phone Number</label>
                <input type="text" class="form-control" asp-for="@Model.Teacher.PhoneNumber" readonly="@(Model.IsEdit != true)" />
            </div>
            <div class="form-group col-md-6">
                <label>Hired Date</label>
                <input type="date" class="form-control" asp-for="@Model.Teacher.HireDate" readonly="@(Model.IsEdit != true)" />
            </div>
        </div>
        <div class="d-flex flex-wrap justify-content-center mt-4">
            <a href="./Index" class="btn btn-secondary mx-2 col-md-2">Back</a>
            <button type="submit" class="btn btn-primary mx-2 col-md-2">Submit</button>
        </div>
    </div>
</form>