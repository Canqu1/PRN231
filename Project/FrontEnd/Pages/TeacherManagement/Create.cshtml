@page
@model FrontEnd.Pages.Teachers.CreateModel
@{
}

<form method="post">
    <div class="container">
        <h2>Add new teacher</h2>

        <div class="text-danger">@Model.Message</div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>Fullname</label>
                <input type="text" class="form-control" asp-for="@Model.Teacher.TeacherName" />
            </div>
            <div class="form-group col-md-6">
                <label>Email</label>
                <input type="email" class="form-control" asp-for="@Model.Teacher.Email" />
            </div>
            <div class="form-group col-md-6">
                <label>Password</label>
                <input type="password" class="form-control" asp-for="@Model.Teacher.Password" />
            </div>
            @* Gắn mặc định type là teacher *@
            <input type="hidden" asp-for="@Model.Teacher.Type" value="teacher"/>
            <div class="form-group col-md-6">
                <label>Department</label>
                <input type="text" class="form-control" asp-for="@Model.Teacher.Department" />
            </div>
            <div class="form-group col-md-6">
                <label>Phone Number</label>
                <input type="text" class="form-control" asp-for="@Model.Teacher.PhoneNumber" />
            </div>
            <div class="form-group col-md-6">
                <label>Hired Date</label>
                <input type="date" class="form-control" asp-for="@Model.Teacher.HireDate" />
            </div>
        </div>
        <div class="d-flex flex-wrap justify-content-center mt-4">
            <a href="./Index" class="btn btn-secondary mx-2 col-md-2">Back</a>
            <button type="submit" class="btn btn-primary mx-2 col-md-2">Submit</button>
        </div>
    </div>
</form>